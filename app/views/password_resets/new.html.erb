<%= form_for :user, url: '/password_resets' do |form| %>
  <div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
      <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
        <h1 class="mb-8 text-3xl text-center">Forgot Password</h1>
        <%= form.text_field :email, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "Email"%>
        <button type="submit" class="w-full text-center py-3 rounded bg-green-600 text-white hover:bg-green-dark focus:outline-none my-1">Forgot Password</button>
      </div>
    </div>
  </div>
<% end %>
