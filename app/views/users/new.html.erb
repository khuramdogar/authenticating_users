<%= form_for :user, url: '/users' do |form| %>
  <div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto min-h-screen flex-1 flex flex-col items-center justify-center px-2">
      <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
        <h1 class="mb-8 text-3xl text-center">Sign up</h1>
        <%= form.text_field :first_name, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "First Name"%>
        <%= form.text_field :last_name, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "Last Name"%>
        <%= form.text_field :email, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "Email"%>
        <%= form.password_field :password, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "Password"%>
        <%= form.password_field :password_confirmation, class: 'block border border-grey-light w-full p-3 rounded mb-4', placeholder: "Password Confirmation"%>
        <button type="submit" class="w-full text-center py-3 rounded bg-green-600 text-white hover:bg-green-dark focus:outline-none my-1">SignUp</button>
      </div>

      <div class="text-grey-dark mt-6">
        Already have an account?
        <%= link_to "Log in", login_path, class: "no-underline border-b border-blue text-blue-700"%>
      </div>
    </div>
  </div>
<% end %>
